import java.util.*;//sum & avg
public class MyClass {
public static void main(String args[]) {
Scanner sc=new Scanner(System.in);  
int n=sc.nextInt();
int[] array = new int[n];  
int sum=0;
int avg;
for(int i=0; i<n; i++)  
{  
array[i]=sc.nextInt(); 
sum=sum+array[i];

}  
avg=sum/n;
  System.out.println(sum);
  System.out.println(avg);
}  
}
